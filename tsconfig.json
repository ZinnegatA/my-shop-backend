{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "moduleResolution": "Node",
    "outDir": "./build",
    "strictNullChecks": true,
    "strict": true,
    "baseUrl": "src"
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*.ts", "jest.config.ts"],
  "exclude": ["node_modules/**/*"]
}
